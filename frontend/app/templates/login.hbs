{{page-toolbar pageTitle='Login'}}

{{#paper-content flex=true scroll-y=true layout-padding=true}}
  {{#doc-content}}
      {{#paper-form onSubmit=(action "authenticate") as |form|}}
        <div class="layout-row">
          <div class="layout-column flex-50">
            {{form.input label="Username" value=identification onChange=(action (mut identification))}}
            {{form.input label="Password" type="password" value=password onChange=(action (mut password))}}
          </div>
        </div>
        <div class="layout-row">
          {{#form.submit-button type="submit" raised=true primary=true}}Login{{/form.submit-button}}
        </div>

        {{#if errors}}
          {{#each errors.non_field_errors as |e|}}
              <p> {{e}} </p>
              {{/each}}
          {{/if}}
      {{/paper-form}}
  {{/doc-content}}
{{/paper-content}}